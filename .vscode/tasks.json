{
    // "options": {
    //     "env": {}
    // },
    "tasks": [
        {
            "type": "process",
            "label": "Build application (debug)",
            "command": "/usr/bin/make",
            "args": [
                "debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src",
                "env": {
                    "OUT_DIR": "../build/debug",
                    "OUT_OBJ_DIR": "../build/debug/obj"
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "process",
            "label": "Build application (release)",
            "command": "/usr/bin/make",
            "args": [
                "release"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src",
                "env": {
                    "OUT_DIR": "../build/release",
                    "OUT_OBJ_DIR": "../build/release/obj"
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "process",
            "label": "Clean build directory",
            "command": "/usr/bin/make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src",
                "env": {
                    "CLEAN_DIR": "../build"
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}